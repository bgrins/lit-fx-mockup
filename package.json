{
  "name": "lit-fx-mockup",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:visual": "playwright test",
    "precommit": "npm run format && npm run lint && npm run typecheck",
    "lint": "eslint . --ext .ts,.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,html,json}\""
  },
  "dependencies": {
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.10.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "eslint": "^9.31.0",
    "eslint-plugin-lit": "^2.1.1",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.25.1"
  }
}
